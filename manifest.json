{
  "manifest_version": 3,
  "name": "Sen - LINE拡張機能",
  "version": "0.1.0",
  "version_name": "pre-Alpha 0.1.0",
  "description": "Enhance Your LINE Experience",
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://line-web.ame-x.net/*"],
      "js": ["content/main.js"],
      "css": [
        "styles/main.css",
        "styles/components/settings.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background/main.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://line-web.ame-x.net/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "icons/*",
      "icons/icon.svg",
      "icons/logo.svg"
    ],
    "matches": ["https://line-web.ame-x.net/*"]
  }]
}
